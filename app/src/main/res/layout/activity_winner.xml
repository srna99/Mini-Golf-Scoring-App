<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/winner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2D38C"
    tools:context=".WinnerActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_weight="0.25"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Game Over!"
        android:textColor="#424242"
        android:textSize="58sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/rankingTable"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <TableRow
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="1st"
                android:textColor="#FFF48C"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Player Name"
                android:textColor="#505050"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="10"
                android:textColor="#FEFFF2"
                android:textSize="40sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="2nd"
                android:textColor="#FFF48C"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/secondPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Player Name"
                android:textColor="#505050"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/secondPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="10"
                android:textColor="#FEFFF2"
                android:textSize="35sp" />
        </TableRow>

        <TableRow
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="3rd"
                android:textColor="#FFF48C"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/thirdPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Player Name"
                android:textColor="#505050"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/thirdPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="10"
                android:textColor="#FEFFF2"
                android:textSize="35sp" />
        </TableRow>

        <TableRow
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="4th"
                android:textColor="#FFF48C"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/fourthPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Player Name"
                android:textColor="#505050"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/fourthPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fresca"
                android:gravity="center"
                android:text="10"
                android:textColor="#FEFFF2"
                android:textSize="35sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/quitButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/boogaloo"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:text="Quit"
        android:textAllCaps="false"
        android:textColor="#353535"
        android:textSize="32sp"
        app:backgroundTint="#6DB1E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/play_againButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/boogaloo"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:text="Play Again"
        android:textAllCaps="false"
        android:textColor="#353535"
        android:textSize="32sp"
        app:backgroundTint="#6DB1E8"
        app:layout_constraintBottom_toTopOf="@+id/quitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankingTable"
        app:layout_constraintVertical_bias="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>